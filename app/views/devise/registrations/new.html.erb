<body class="bg-indigo-900">
  <div class="m-4 md:m-24 flex-row md:flex justify-center items-center">
    <div class="ml-0 md:ml-32 flex-col">
    
      <h2 class="mt-4 md:mt-8 text-yellow-200 text-4xl font-bold">Sign Up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field mt-6">
          <%= f.label :name, class: "text-yellow-200 text-2xl font-bold" %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "w-96 bg-purple-100 text-purple-800 border-4 border-purple-900 border-rounded font-bold py-2 px-4 mt-2 mb-3 rounded-xl" %>
        </div>

        <div class="field mt-6">
          <%= f.label :email, class: "text-yellow-200 text-2xl font-bold" %><br />
          <%= f.email_field :email, autocomplete: "email", class: "w-96 bg-purple-100 text-purple-800 border-4 border-purple-900 border-rounded font-bold py-2 px-4 mt-2 mb-3 rounded-xl" %>
        </div>

        <div class="field mt-6">
          <%= f.label :password, class: "text-yellow-200 text-2xl font-bold" %><br />
          <% if @minimum_password_length %>
            <em class="text-yellow-200">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "w-96 bg-purple-100 text-purple-800 border-4 border-purple-900 border-rounded font-bold py-2 px-4 mt-2 mb-3 rounded-xl" %>
        </div>

        <div class="field mt-6">
          <%= f.label :password_confirmation, class: "text-yellow-200 text-2xl font-bold" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-96 bg-purple-100 text-purple-800 border-4 border-purple-900 border-rounded font-bold py-2 px-4 mt-2 mb-3 rounded-xl" %>
        </div>

        <div class="actions mt-6">
          <%= f.submit "Sign up", class: "w-96 bg-purple-800 hover:bg-purple-600 border-2 border-solid border-purple-900 text-white font-bold py-2 px-4 my-4 rounded-xl hover:cursor-pointer" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  
    <div class="flex-col mt-8 md:mt-0">
      <%= image_tag 'logo', class: "ml-0 md:ml-4 md:ml-32 w-24 md:w-96 my-4 rounded-l" %>
      <p class="ml-0 md:ml-4 md:ml-32 mt-8 md:mt-16 mr-32 flex-wrap text-yellow-200 text:2xl md:text-6xl">myTunes connects musicians with musicians. Post news about your projects, share your latest sounds, or just hang out and talk shop.<br><br>By musicians, for musicians.</p>
    </div>

  </div>
</body>