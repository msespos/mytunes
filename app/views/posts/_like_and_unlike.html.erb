<%= pluralize(p.number_of_likes, 'Like') %>
<% if current_user.likes.where(post_id: p.id, post_type: post_type).empty? %>
  <p class="text-red-500 hover:text-red-300">
    <%= link_to 'Like this post',
      like_posts_path(like: { post_id: p.id, post_type: post_type }),
        method: :post %>
  </p>
<% else %>
  <p class="text-red-500 hover:text-red-300">
    <%= link_to 'Unlike this post',
      unlike_posts_path(like: { post_id: p.id, post_type: post_type }),
        method: :delete %>
  </p>
<% end %>
