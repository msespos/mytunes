<%= render 'shared/navbar' %>

<div class="py-8">
  <p class="font-extrabold text-6xl">
    <%= @user.name %>'s Profile<br><br>
    <% if @user.avatar.attached? %>
      <%= image_tag(@user.avatar, class: "object-cover w-96 h-96") %><br>
    <% else %>
      <%= image_tag 'default_pfp', class: "object-cover w-32 h-32" %><br>
    <% end %>
    Project: <%= @user.project_name %><br>
    Location: <%= @user.location %><br>
    Favorite artist: <%= @user.favorite_artist %><br>
    Birthday: <%= @user.birthday %><br><br>
    Posts<br>
    <% @user.text_posts.each do |p| %>
      <%= p.body %><br>
      <%= p.created_at %><br>
    <% end %><br>
  </p>
</div>
